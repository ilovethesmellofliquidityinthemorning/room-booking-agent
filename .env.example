# Environment Configuration for Room Booking Agent

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Momentus System Configuration
MOMENTUS_BASE_URL=https://utexas.momentus.io/
MOMENTUS_USERNAME=your_momentus_username
MOMENTUS_PASSWORD=your_momentus_password

# SharePoint URL for manual login workflow
SHAREPOINT_URL=https://utexas.sharepoint.com/sites/McCombs-DepartmentofFinance/SitePages/CollabHome.aspx

# Flask Application Configuration
SECRET_KEY=your_secret_key_for_flask_sessions
DEBUG=False
PORT=5000

# Logging Configuration
LOG_LEVEL=INFO

# Chrome WebDriver Configuration (optional)
CHROME_DRIVER_PATH=/path/to/chromedriver
HEADLESS_BROWSER=True

# Application Settings
MAX_BOOKING_DURATION_HOURS=8
DEFAULT_ROOM_CAPACITY=10
BUSINESS_HOURS_START=08:00
BUSINESS_HOURS_END=18:00

# Development Settings (for development only)
FLASK_ENV=production